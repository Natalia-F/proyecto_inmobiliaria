extends ../layout/index

block contenido
    div
        img(src="/img/BienesRaices.png", alt="Logo de Bienes Raices", class="logo w-32 h-auto mx-auto")
        h2.text-center.text-2xl.font-extrabold= pagina
        
        if errores
            div(class="max-w-md mx-auto my-10")
                each error in errores
                    p.bg-red-600.text-white.uppercase.text-center.p-2.mb-1.font-bold=error.msg 
        .mt-5.mx-auto.max-w-md
            .bg-white.py-4.px-4.shadow
                form.space-y-5(method="POST" action="/auth/registro" noValidate)
                    input(type="hidden" name="_csrf" value=csrfToken)
                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="firstname") Nombre
                        input#firstname.w-full.px-3.py-1.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Ingresa tu primer nombre" type="text" name="firstname" value= usuario ? usuario.firstname : '')
                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="lastname") Apellidos
                        input#lastname.w-full.px-3.py-1.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Ingresa tus apellidos" type="text" name="lastname" value= usuario ? usuario.lastname : '')
                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="email") Email
                        input#email.w-full.px-3.py-1.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="ejemplo : juanperez@dominio.cl" type="email" name="email" value= usuario ? usuario.email : '')
                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="password") Contraseña
                        input#password.w-full.px-3.py-1.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="******" type="password" name="password")
                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="password_confirm") Confirmar Contraseña
                        input#password_confirm.w-full.px-3.py-1.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="******" type="password" name="password_confirm")
                    div.flex.items-center.justify-between 
                        a.text-xs(href="/auth/login") ¿Ya tienes Cuenta? Iniciar Sesión
                    div 
                        input(class="w-full bg-black hover:bg-gray-800 text-white font-bold py-3 cursor-pointer" value="Registrarse" type="submit")